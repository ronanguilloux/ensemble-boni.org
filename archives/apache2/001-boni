# 001-boni
<VirtualHost *:80>
    ServerName boni
    DocumentRoot /home/ronan/Workspace/ensemble-boni.org/web
    <Directory /home/ronan/Workspace/ensemble-boni.org/web>
        Options FollowSymLinks
        AllowOverride All
        Order allow,deny
        Allow from all
    </Directory>
    SetEnvIf Request_URI "\.(ico|pdf|flv|jpg|jpeg|png|gif|js|css|swf|txt|cur)$" dontlog
    SetEnvIf Request_URI "^_" dontlog
    SetEnvIf Request_URI "^/_" dontlog
    # include the vhost name in the logoutput
    LogFormat "%V %h %l %u %t \"%r\" %>s %b \"%{Referer}i\" \"%{User-Agent}i\" \"%{cookie}i\" test" combined_cookie_vhost    
    CustomLog ${APACHE_LOG_DIR}/access.boni.com.log combined_cookie_vhost env=!dontlog
    ErrorLog ${APACHE_LOG_DIR}/error.boni.com.log
    # Possible values include: debug, info, notice, warn, error, crit, alert, emerg.
    LogLevel warn
</VirtualHost>

<VirtualHost *:80>
    ServerName www.boni
    RedirectMatch permanent ^/(.*) http://boni/$1
</VirtualHost>
